<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Making a dark theme? You know what to do! -->
    <style name="Theme.LaunchDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="colorBackgroundFloating">@color/background</item>
        <item name="colorButtonNormal">@color/surface</item>
        <item name="dialogCornerRadius">@dimen/corner_radius</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.Negative</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="Button.Positive" parent="Button">
        <item name="android:background">@drawable/btn_positive</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="Button.Negative" parent="Button">
        <item name="android:background">@drawable/btn_negative</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="IconButton" parent="Button">
        <item name="android:background">@drawable/btn_image</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:drawableTint">@color/accent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold</item>
    </style>

    <dimen name="corner_radius">24dp</dimen>
    <dimen name="button_corner_radius">24dp</dimen>
    <dimen name="button_inset_vertical">0dp</dimen>
    <dimen name="button_inset_horizontal">0dp</dimen>
    <dimen name="dialog_padding">8dp</dimen>

</resources>